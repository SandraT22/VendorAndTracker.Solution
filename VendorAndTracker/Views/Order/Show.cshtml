<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My Record List!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using VendorAndTracker.Models;

    <h1>Orders</h1>
    @if (Model.Count == 0)
    {
      <p>There are no orders in the list.</p>
    }
    <ul>
      @foreach (Order newOrder in Model)
      {
        <li><a href='/order/@newOrder.Id'>@newOrder.OrderTitle</a></li>
      }

    </ul>
    <a href="/order/new">Add a new order.</a>

    <p><a href='/'>Back home</a></p>
  </body>
</html>